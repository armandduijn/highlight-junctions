{
    "name": "Bezochte Fietsknooppunten",
    "version": "1.0",
    "description": "Toont welke fietsknooppunten je al hebt bezocht op de routeplanner van Route.nl.",
    "content_scripts": [{
        "matches": ["*://*.route.nl/routeplanner"],
        "run_at": "document_idle",
        "css": ["style.css"],
        "js": ["inject.js"]
    }],
    "web_accessible_resources": [
        "content.js"
    ],
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "manifest_version": 2
}